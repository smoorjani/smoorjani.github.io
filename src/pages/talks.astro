---
import Layout from '../layouts/Layout.astro';
import talks from '../data/talks.json';
---

<Layout title="Talks - Samraj Moorjani">
  <div class="page-header">
    <h1>Talks</h1>
    <p>Conference presentations, webinars, and workshops.</p>
  </div>

  <section>
    <div class="talks-grid">
      {talks.map((talk) => (
        <a href={talk.url} class="talk-card" target="_blank">
          <div class="talk-thumbnail">
            <img src={`https://img.youtube.com/vi/${talk.videoId}/mqdefault.jpg`} alt={talk.title} />
            <div class="play-icon">▶</div>
          </div>
          <div class="talk-content">
            <h3 class="talk-title">{talk.title}</h3>
            <p class="talk-meta">{talk.event} · {talk.date}</p>
            {talk.description && (
              <p class="talk-description">{talk.description}</p>
            )}
          </div>
        </a>
      ))}
    </div>
  </section>
</Layout>

<style>
  .talk-description {
    color: var(--text-secondary);
    font-size: 0.85rem;
    margin-top: 0.75rem;
    line-height: 1.5;
  }
</style>
